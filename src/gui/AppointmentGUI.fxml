<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="650.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.AppointmentController">
    <center>
        <TableView fx:id="appointmentTable" prefHeight="400.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="patientIdColumn" prefWidth="100.0" text="Patient ID" />
                <TableColumn fx:id="dateColumn" prefWidth="100.0" text="Date (DD.MM.YYYY)" />
                <TableColumn fx:id="timeColumn" prefWidth="80.0" text="Time" />
                <TableColumn fx:id="statusColumn" prefWidth="120.0" text="Status" />
                <TableColumn fx:id="descriptionColumn" prefWidth="250.0" text="Description" />
            </columns>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
            <children>
                <GridPane hgap="10.0" vgap="5.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="120.0" minWidth="120.0" prefWidth="120.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="200.0" />
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="120.0" minWidth="120.0" prefWidth="120.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="200.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <!-- ROW 0 -->
                        <Label text="ID (For CRUD):" />
                        <TextField fx:id="idInput" promptText="Appt ID" GridPane.columnIndex="1" />
                        <Label text="Patient ID:" GridPane.columnIndex="2" />
                        <TextField fx:id="patientIdInput" promptText="Required" GridPane.columnIndex="3" />
                        <!-- ROW 1 -->
                        <Label text="Date (DD.MM.YYYY):" GridPane.rowIndex="1" />
                        <TextField fx:id="dateInput" promptText="20.10.2025" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Time (HH.MM):" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <TextField fx:id="timeInput" promptText="09.00" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                        <!-- ROW 2 -->
                        <Label text="Status:" GridPane.rowIndex="2" />
                        <TextField fx:id="statusInput" promptText="Confirmed / Pending" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Description:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                        <TextField fx:id="descriptionInput" promptText="Reason for visit" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                    </children>
                    <VBox.margin>
                        <Insets left="20.0" right="20.0" />
                    </VBox.margin>
                </GridPane>
                <HBox alignment="CENTER" prefHeight="40.0" spacing="15.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleCreate" text="Create Appointment" />
                        <Button mnemonicParsing="false" onAction="#handleUpdate" text="Update Appointment" />
                        <Button mnemonicParsing="false" onAction="#handleDelete" text="Delete Appointment" />
                        <Button mnemonicParsing="false" onAction="#handleFilterByDate" text="Filter By Date" />
                        <Button mnemonicParsing="false" onAction="#handleFilterByPatientId" text="Filter By Patient ID" />
                        <Button mnemonicParsing="false" onAction="#handleShowAll" text="Show Full List" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" top="15.0" />
                    </VBox.margin>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" />
            </BorderPane.margin>
        </VBox>
    </bottom>
</BorderPane>